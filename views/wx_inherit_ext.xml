<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="res_partner_wx_ext" model="ir.ui.view">
            <field name="name">res.partner.view.form.wx</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                    <field name="wxcorp_user_id"/> 
                </xpath>
            </field>
        </record>

           <record id="res_partner_wx_openid" model="ir.ui.view">
            <field name="name">res.partner.view.form.wxopenid</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='wxcorp_user_id']" position="after">
                    <field name="wx_opendid"/>
                </xpath>
            </field>
        </record>


          <record id="res_users_wx_cropuser" model="ir.ui.view">
            <field name="name">res.users.view.form.corpuser</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='signature']" position="after">
                    <field name="wxcorp_user_id"/>
                </xpath>
            </field>
        </record>

          <record id="res_users_wx_user" model="ir.ui.view">
            <field name="name">res.users.view.form.wxopenid</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='wxcorp_user_id']" position="after">
                    <field name="wx_opendid"/>
                </xpath>
            </field>
        </record>


    </data>
</openerp>