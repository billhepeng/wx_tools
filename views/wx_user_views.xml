<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="wx_user_view_tree" model="ir.ui.view">
            <field name="name">wx.user.view_tree</field>
            <field name="model">wx.user</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="公众号客户列表">
                    <field name="id"/>
                    <field name="nickname"/>
                    <field name="sex"/>
                    <field name="openid"/>
                    <field name="headimg"/>
                    <field name="city"/>
                    <field name="country"/>
                    <field name="group_id"/>
                    <field name="province"/>
                    <field name="subscribe"/>
                    <field name="subscribe_time"/>
                </tree>
            </field>
        </record>

        <record id="wx_user_view_form" model="ir.ui.view">
            <field name="name">wx.user.view_form</field>
            <field name="model">wx.user</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="公众号客户">
                    <header>
                        <button name="send_text_confirm" string="发送微信消息" type="object"
                                attrs="{'invisible': [('id', '=', False)]}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="id" invisible="1"/>
                            <group>
                                <field name="nickname"/>
                                <field name="openid"/>
                            </group>
                            <group>
                                <field name="sex"/>
                                <field name="headimgurl"/>
                                <field name="city"/>
                                <field name="country"/>
                                <field name="group_id"/>
                                <field name="province"/>
                            </group>
                            <group>
                                <field name="subscribe"/>
                                <field name="subscribe_time"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="wx_user_filter" model="ir.ui.view">
            <field name="name">wx.user.select</field>
            <field name="model">wx.user</field>
            <field name="arch" type="xml">
                <search string="微信用户查找">
                    <field name="nickname" string="昵称" filter_domain="[('nickname','ilike',self)]"/>
                    <field name="sex" string="男/女"
                           filter_domain="[('sex','=',1)]"/>
                    <filter help="男性微信用户" icon="terp-personal+"
                            domain="[('sex','=',1)]"/>
                    <filter help="女性微信用户" icon="terp-personal+"
                            domain="[('sex','=',2)]"/>
                    <filter help="关注状态" icon="terp-personal+"
                            domain="[('subscribe', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="所属组" context="{'group_by': 'group_id'}"/>
                        <separator/>
                        <filter string="关注状态" icon="terp-personal" domain="[]"
                                context="{'group_by' : 'subscribe'}"/>
                        <filter string="性别" icon="terp-personal" domain="[]"
                                context="{'group_by' : 'sex'}"/>
                        <filter string="国家" icon="terp-personal" domain="[]"
                                context="{'group_by' : 'country'}"/>
                        <filter string="城市" icon="terp-personal" domain="[]"
                                context="{'group_by' : 'city'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="wx_user_action" model="ir.actions.act_window">
            <field name="name">公众号用户</field>
            <field name="res_model">wx.user</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>

        <menuitem action="wx_user_action" id="wx_user_menuitem" name="公众号用户" parent="parent_menu_120" sequence="10"/>
        <record id="wx_user_action_server_126" model="ir.actions.server">
            <field name="name">同步</field>
            <field name="condition">True</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_wx_user"></field>
            <field name="state">code</field>
            <field name="code">records.sync()</field>
        </record>


        <record id="wx_user_action_server_sync" model="ir.actions.server">
            <field name="name">同步公众号用户</field>
            <field name="condition">True</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_wx_user"></field>
            <field name="state">code</field>

            <field name="code">action = env['wx.user'].sync_confirm()</field>
        </record>
        <menuitem action="wx_user_action_server_sync" id="wx_user_sync_menuitem" name="同步公众号用户" parent="parent_menu_120"
                  sequence="10"/>

    </data>
</odoo>
